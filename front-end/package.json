{
  "dependencies": {
    "angular":                ">= 1.6.4",
    "angular-ui-router":      ">= 0.4.2",
    "bootstrap-sass":         ">= 3.3.7",
    "jquery":                 ">= 3.2.1",
    "nodemon":                "1.11.0"
  },
  "devDependencies": {
    "angular-mocks":          "1.6.4",
    "concurrently":           "latest",
    "connect":                "3.6.0",
    "grunt":                  "~0.4.5",
    "grunt-contrib-concat":   "~0.4.0",
    "grunt-contrib-jshint":   "~0.10.0",
    "grunt-contrib-qunit":    "~0.5.2",
    "grunt-contrib-uglify":   "~0.5.0",
    "grunt-contrib-watch":    "~0.6.1",
    "http-server":            "latest",
    "jasmine":                ">= 2.5.3",
    "node-sass":              "^4.5.0",
    "opn":                    ">= 4.0.2"
  },
  "engines": {
    "node":                   "latest"
  },
  "scripts": {
    "build-css":  "node-sass --include-path scss css/style.scss css/style.css",
    "watch-css":  "nodemon -e scss -x \"npm run build-css\"",
    "start":      "concurrently \"npm run watch-css\" \"node server.js firefox\"",
    "start-with-opera":      "concurrently \"npm run watch-css\" \"node server.js opera\""
  }
}
